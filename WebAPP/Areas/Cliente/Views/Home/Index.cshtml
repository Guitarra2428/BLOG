@model WebAPP.Models.HomeVM
@{
    ViewData["Title"] = "Index";
}





    <header>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{int cont = 0; }
                @foreach (var item in Model.Sliders)
                {
                    var itemDinamico = cont++ == 0 ? "item active" : "item";
                    <div class="carousel-item @itemDinamico ">
                        <img src="@Url.Content(item.Urlimagen)" style="width:100%;  height:500px;" />
                        <h1 class="text-dark text-center">@Html.Raw(item.Nombre)</h1>
                    </div>


                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                @*<span class="sr-only">Next</span>*@
            </a>

        </div>


    </header>


    <div class="row  border " style=" background:url(../Imagenes/backd.jpg); padding: 35px 0 35px 0;">

        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2  row-cols-xl-1 row-cols-xl-2 row-cols-lg-3 ">
            <div class="col">

                <div class="card bg-transparent">
                    <div class="card-header">
                        <img class="img-fluid img-thumbnail rounded-circle offset-5 bg-transparent" src="../Imagenes/cv.jpeg" alt="Imagen de perfil" width="200" />

                    </div>
                    <div class="card-title text-white ">
                        <p class="text-center offset-4"> Ing. Luis Alberto Mesili</p>

                    </div>
                </div>
            </div>

            <div class="col-sm-6 py-5">
                <h1 class="text-center text-white ">Portafolio web</h1>
                <p class="text-white offset-4"><i>Objetivo: </i> Desarrollar los conocimientos adquiridos, mediante estudios y labores, aportando en el desarrollo de la sociedad.</p>

            </div>
            <div class="  col-sm-12 text-white offset-5 ">

            </div>


        </div>


    </div>
    <br />


    <div class="card text-white bg-dark mb-3 container-fluid" style="width:auto;">
        <div class="card-header">
            <h1 class="text-center">Proyectos De Base De Datos</h1>

        </div>
        <div class="card-body p-2">
            <div class="row  row-cols-1     ">
                @foreach (var item in Model.ListaArticulos.OrderBy(o => o.Id))
                {
                    <div class="col-auto p-2">
                        <div class="card h-100 ">
                            <img src="@item.UrlImagen" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title text-center text-black-50">@item.Nombre</h5>
                                <a asp-action="Detalles" class="btn btn-dark btn-block" style="border-radius:2px;" asp-route-id="@item.Id"> Mas informacion</a>

                            </div>
                            <div class="card-footer">
                                <small class="text-muted">@item.FechaCreacion</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <br />





    <div class="card text-white bg-dark mb-3  ">
        <div class="card-header">
            <h1 class="text-center">Proyectos Web</h1>
        </div>
        <div class="card-body ">
            <div class="row  row-cols-1   ">
                @foreach (var item in Model.ListaProyecto.OrderBy(o => o.Id))
                {
                    <div class="col-auto p-2">
                        <div class="card h-100">
                            <img src="@item.UrlImagen" class="card-img-top w-100">
                            <div class="card-body">
                                <h5 class="card-title text-black-50 text-center">@item.Nombre</h5>
                                <a asp-action="ProyectoDetalles" class="btn btn-dark btn-block" style="border-radius:2px;" asp-route-id="@item.Id"> Visitar Sitio Web</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">@item.FechaCreacion</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


