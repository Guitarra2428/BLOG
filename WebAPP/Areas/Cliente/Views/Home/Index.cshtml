@model WebAPP.Models.HomeVM
@{
    ViewData["Title"] = "Index";
}


<header>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{int cont = 0; }
            @foreach (var item in Model.Sliders)
            {
                var itemDinamico = cont++ == 0 ? "item active" : "item";
                <div class="carousel-item @itemDinamico ">
                    <img src="@Url.Content(item.Urlimagen)" style="width:100%; height:400px;"/>
                    <h1 class="text-dark text-center">@Html.Raw(item.Nombre)</h1>
                </div>


            }

        </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    @*<span class="sr-only">Next</span>*@
                </a>
       
    </div>


 </header>


<div class="row fondoTitulo mt-5">
    <div class="col-sm-12 py-5">
        <h1 class="text-center text-white " >Ultimos cursos tutoriales</h1>
    </div>
</div>



@if (Model.ListaArticulos.Count()>0)
{
    <br />
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.ListaArticulos.OrderBy(o => o.Id))
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@item.UrlImagen" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.Nombre</h5>
                        <a asp-action="Detalles" class="btn btn-success" style="border-radius:2px;" asp-route-id="@item.Id"> Mas informacion</a>

                    </div>
                    <div class="card-footer">
                        <small class="text-muted">@item.FechaCreacion</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No hay articulos</p>
}
