
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebAPP.Models.Slider

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<br />

<h3 class="text-center">Editar Slider</h3>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id"/>
    <div class="row px-2 ax-2 mx-4 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6 offset-1 mt-4">

            <div class="form-group row">

                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">

                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>

                </div>
            </div>


            <div class="form-group row">

                <div class="col-4">
                    <label asp-for="Urlimagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="ARCHIVOS" id="subidaarchivo " class="form-control" />


                </div>
            </div>


            <div class="form-group row">
                
                    <div class="col-6">
                        <button type="submit" asp-route-id="@Model.Id" class="btn btn-primary form-control">Actualizar</button>
                        &nbsp;
                    </div>

                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                    </div>
                </div>


           

        </div>
        <div class="col-4 pt-3">
            <img src="@Model.Urlimagen" style="border-radius:4px; width:100%; border:1px solid #ffffff" />
        </div>
    </div>
        

  
</form>






