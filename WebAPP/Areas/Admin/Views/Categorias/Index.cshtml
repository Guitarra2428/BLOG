
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista De Categoria</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus">Crear Nueva Categoria</i></a>
        </div>
    </div>


    <br />
    <br />
    <div class="table-responsive">



        <table id="tblCategorias" class="table table-striped table-bordered" @*cellspacing="0"*@ style="width:100%;">

            <thead>

                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Orden</th>
                    <th></th>

                </tr>
            </thead>
        </table>



    </div>
</div>

@section Scripts{

    <script src="~/js/categorias.js"></script>

}

